<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="leaveRequestIDForm" model="ir.ui.view">
        <field name="name">LeaveRequest.form</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="leave_status" widget="statusbar" statusbar_visible="draft,approved,reject"/>
                    <button name="action_approve"
                            string="Approved"
                            type="object"
                            class="btn_primary"
                            invisible="leave_status != 'draft'"/>
                    <button name="action_reject"
                            string="Reject"
                            type="object"
                            class="btn_danger"
                            invisible="leave_status not in ('draft','approved')"/>
                    <button name="action_reset_to_draft"
                            string="Reset To Draft"
                            type="object"
                            invisible="leave_status != 'rejected'"/>
                </header>
                <sheet>
                    <group>
                        <field name="emp_name_two"/>
                        <field name="leave_type"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="leaveRequestIDlist" model="ir.ui.view">
        <field name="name">LeaveRequest.list</field>
        <field name="model">leave.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="emp_name_two"/>
                <field name="leave_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="leave_status"/>
            </list>
        </field>
    </record>
    <record id="actionRequest" model="ir.actions.act_window">
        <field name="name">Leave Request</field>
        <field name="res_model">leave.request</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="newmenu" name="Leave Request" parent="hr.menu_hr_root" action="actionRequest"/>
</odoo>